    "version": "0.2.0",
    "configurations": [
        {
            "name": "Syllabits Server (Shell)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "4000",
                "SYLLABITS_MODE": "development",
                "SYLLABITS_SECRET_KEY": "thisisadummykeyfordevelopment"
            },
            "args": [
                "shell"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Syllabits Server (Debug)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_ENV": "development",
                "FLASK_RUN_PORT": "4000",
                "SYLLABITS_MODE": "development",
                "SYLLABITS_SECRET_KEY": "thisisadummykeyfordevelopment"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": false
        }
    ]
}